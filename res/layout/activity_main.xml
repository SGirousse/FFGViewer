<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonShowProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="@string/text_button_access_profile" />

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quickContactBadgeUser"
        android:layout_alignLeft="@+id/buttonShowProfile"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:layout_toLeftOf="@+id/quickContactBadgeUser"
        android:text="@string/hello" />

    <QuickContactBadge
        android:id="@+id/quickContactBadgeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="19dp" />

    <Button
        android:id="@+id/buttonTournamentSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonShowProfile"
        android:text="@string/text_button_tournament_schedule" />

    <Button
        android:id="@+id/buttonGoFFG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonTournamentSchedule"
        android:text="@string/text_button_access_FFG_website" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonGoFFG"
        android:text="@string/text_button_search" />

    <Button
        android:id="@+id/buttonUpdating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonSearch"
        android:text="@string/text_button_updating" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="version_number"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewLastMAJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonUpdating"
        android:text="@string/last_update_db"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewLastMAJDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLastMAJ"
        android:layout_alignBottom="@+id/textViewLastMAJ"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewLastMAJ"
        android:text="@string/last_update_db_date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
