<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewPlayerSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPlayerName"
        android:layout_alignBottom="@+id/textViewPlayerName"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textViewPlayerName"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewPlayerRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPlayerSurname"
        android:layout_alignBottom="@+id/textViewPlayerSurname"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewPlayerSurname"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewPlayerClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewRating"
        android:layout_alignParentRight="true"
        android:text="TextView" />
    
</RelativeLayout>